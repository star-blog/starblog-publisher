<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="150"
             Width="400" MinHeight="150"
             x:Class="StarBlogPublisher.Controls.ConfirmDialog">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <TextBlock Grid.Row="0" x:Name="TitleText" Text="确认" FontWeight="Bold" FontSize="16" />
        
        <TextBlock Grid.Row="1" x:Name="MessageText" TextWrapping="Wrap" Margin="0,10" />
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button x:Name="CancelButton" Content="取消" Click="CancelButton_Click" />
            <Button x:Name="OkButton" Content="确定" Click="OkButton_Click" Classes="Primary" />
        </StackPanel>
    </Grid>
</UserControl> 